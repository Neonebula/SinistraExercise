<div class="container">
  <h1><%= @element[:title] %></h1>
  <div class="row justify-content-md-center">
    <div class="col-lg-6">
      <div class="card">
        <% if @element[:photo] != nil %>
          <img src="<%= @element[:photo] %>" class="card-img-top" alt="Image not found">
        <% end %>
        <div class="card-body">
          <p class="card-text"><%= @element[:content] %></p>
          <% if @element[:rating] != nil %>
            <p class="card-text">Rating : <%= @element[:rating] %>/5</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h2>Comments</h2>
    </div>
    <% if @comments.length == 0%>
      <div class="col">There are no comments.</div>
    <%end%>
    <% @comments.each do |data| %>
      <div class="col-lg-12">
        <div class="card mb-3">
          <div class="card-body">
            <%= data %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-lg-12">
      <div class="card mb-3">
        <div class="card-body">
          <form action="/comment/<%=@index%>" method="post" class="needs-validation" novalidate>
            <div class="form-row">
              <div class="col-10">
                <input type="text" class="form-control" placeholder="What are you thoughts?" name="comment[content]" required>
              </div>
              <div class="col-2">
                <button type="submit" class="btn btn-primary">Comment</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>
