<div class="container">
  <h1><%= @element[:title] %></h1>
  <div class="row justify-content-md-center">
    <div class="col-lg-6">
      <div class="card">
        <% if @element[:photo] != nil %>
          <img src="<%= @element[:photo] %>" class="card-img-top" alt="Image not found">
        <% end %>
        <div class="card-body">
          <p class="card-text"><%= @element[:content] %></p>
          <% if @element[:rating] != nil %>
            <p class="card-text">Rating : <%= @element[:rating] %>/5</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <h2>Comments</h2>
    <% @comments.each do |data| %>
      <div class="col-lg-12">
        <div class="card mb-3">
          <div class="card-body">
            <%= data %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
