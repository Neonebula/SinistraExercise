<div class="container">
  <h1>Comments for article : '<%= @element[:title] %>'</h1>
  <div class="row">
    <% @comments.each do |data| %>
      <div class="col-md-6">
        <div class="card mb-3">
          <div class="card-body">
            <%= data %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
